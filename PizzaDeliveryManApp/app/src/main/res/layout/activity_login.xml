<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.genius.pizzadelivery.LoginActivity"
    android:gravity="center"
    android:background="@drawable/storecopy">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etLoginUsername"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26dp"
        android:hint="Username"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="26dp"
        android:id="@+id/etLoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/etLoginUsername"
        android:hint="Password"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btnLogin"
        android:onClick="onLoginBtnClick"
        android:textSize="31dp"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/etLoginPassword"
        android:layout_alignRight="@+id/etLoginPassword"
        android:layout_alignEnd="@+id/etLoginPassword"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
